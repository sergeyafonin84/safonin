<web-app>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ru.job4j.parsentev.servlets.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <servlet>
        <!--<servlet-name>EchoServlet</servlet-name>-->
        <!--<servlet-class>ru.job4j.parsentev.servlets.EchoServlet</servlet-class>-->
        <servlet-name>Users Controller Servlet</servlet-name>
        <servlet-class>ru.job4j.parsentev.servlets.UsersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <!--<servlet-name>EchoServlet</servlet-name>-->
        <!--<url-pattern>/echo</url-pattern>-->
        <servlet-name>Users Controller Servlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Signin</servlet-name>
        <servlet-class>ru.job4j.parsentev.servlets.SigninController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>



</web-app>